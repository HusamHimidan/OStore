<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
           x:DataType="viewmodels:TasksViewModel"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodels="clr-namespace:Tasker.ViewModels"
             x:Class="Tasker.Views.AddTask">
         <StackLayout Margin="10">
            <Label Text="Note"  />
        <Entry HeightRequest="150" ReturnCommand="{Binding AddCommand}" ReturnType="Done" Text="{Binding Task.Note}" Placeholder="Note"/>
      
    </StackLayout> 
</ContentPage>